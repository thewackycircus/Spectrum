<?xml version="1.0" encoding="utf-8"?>
<com.example.test.PaletteListItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paletteListItemLayout"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/paletteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Palette"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/editNameButton"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@android:drawable/ic_menu_edit"/>

        <TextView
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="By User: thewackycircus"
            android:textSize="14dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/paletteColoursDisplay"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>

        <ImageButton
            android:id="@+id/editPaletteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/deletePaletteButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_delete" />

    </LinearLayout>


</com.example.test.PaletteListItem>